<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Network Access -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
        <key>NSAllowsArbitraryLoadsInWebContent</key>
        <true/>
        <key>NSAllowsLocalNetworking</key>
        <true/>
    </dict>

    <!-- Camera and Photo Library -->
    <key>NSCameraUsageDescription</key>
    <string>Ostia needs access to your camera to take photos for sending messages.</string>

    <key>NSPhotoLibraryUsageDescription</key>
    <string>Ostia needs access to your photo library to select images for sending messages.</string>

    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>Ostia needs access to save images to your photo library.</string>

    <!-- File Access -->
    <key>UIFileSharingEnabled</key>
    <true/>

    <key>LSSupportsOpeningDocumentsInPlace</key>
    <true/>

    <!-- Background Modes -->
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
        <string>remote-notification</string>
    </array>

    <!-- Notification -->
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
        <string>remote-notification</string>
    </array>
</dict>
</plist>
